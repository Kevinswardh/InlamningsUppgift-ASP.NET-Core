@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<main class="login-page">
    <div class="background-container">
        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/ce3234e7c1b44e43f8b055fd3bc42ab0c0e31e4c"
             alt="Background"
             class="background-image" />
        <div class="blur-overlay"></div>
    </div>
    <section class="welcome-section">
        <h1 class="welcome-title">
            Welcome to <span alt="Admin login" class="highlight">Admin page</span>
        </h1>
        <p class="welcome-description">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus
            ullamcorper nisl erat, vel convallis elit fermentum pellentesque. Sed
            mollis velit facilisis facilisis viverra.
        </p>
        <p style="color: red; margin-top: 20px; font-size: 14px;">If you are not Admin to this application please leave this page.</p>

    </section>

    <section class="login-section">
        <div class="login-container">
            <div class="form-toggle-container">
                <!-- Login Form -->
                <div class="login-form-wrapper">
                    <h2 style="margin-bottom: 1px;" class="login-header">Login</h2>
                    <p style="margin-bottom: 40px; margin-top: 5px; font-size: 12px; " class="login-text">
                        Not admin?
                        <a asp-controller="Login" asp-action="Index" class="toggle-to-login">Back to Home</a>

                    </p>
                    <div class="oauth-grid">
                        <button class="oauth-button">
                            <img src="@Url.Content("~/Pictures/Icons/LoginIcons/google-icon-logo-svgrepo-com.svg")"
                                 alt="Signup icon"
                                 class="google-icon" />
                            <span>Google</span>
                        </button>
                        <button class="oauth-button">
                            <img src="@Url.Content("~/Pictures/Icons/LoginIcons/facebook-svgrepo-com.svg")"
                                 alt="Signup icon"
                                 class="google-icon" />
                            <span>Facebook</span>
                        </button>
                        <button class="oauth-button">
                            <img src="@Url.Content("~/Pictures/Icons/LoginIcons/microsoft-svgrepo-com.svg")"
                                 alt="Signup icon"
                                 class="google-icon" />
                            <span>Microsoft</span>
                        </button>
                        <button class="oauth-button">
                            <img src="@Url.Content("~/Pictures/Icons/LoginIcons/github-svgrepo-com.svg")"
                                 alt="Signup icon"
                                 class="google-icon" />
                            <span>GitHub</span>
                        </button>
                    </div>

                    <div class="divider">
                        <div class="divider-line"></div>
                        <span class="divider-text">OR</span>
                        <div class="divider-line"></div>
                    </div>

                    <form class="login-form">
                        <div class="form-group">
                            <label for="login-email" class="form-label">Email</label>
                            <input type="email"
                                   id="login-email"
                                   name="email"
                                   class="form-input"
                                   placeholder="Your email address"
                                   autocomplete="email" />
                        </div>

                        <div class="form-group mb-20">
                            <label for="login-password" class="form-label">Password</label>
                            <input type="password"
                                   id="login-password"
                                   name="password"
                                   class="form-input"
                                   placeholder="Enter your password"
                                   autocomplete="current-password" />
                        </div>

                        <div class="form-actions">
                            <label class="remember-me">
                                <input type="checkbox" /> Remember Me
                            </label>
                            <a href="#" class="forgot-password">Forgot Password?</a>
                        </div>

                        <!--Ändra till button senare i visiual studio-->
                        <a href="projects.html" class="temporary-login-button">Log In</a>


                    </form>
                </div>




            </div>
        </div>
        </div>
    </section>
</main>
